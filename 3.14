#include <iostream>
#include <cmath>

int main() {
    // กำหนดตัวแปร
    float r, sArea, CrArea, area;

    // รับค่ารัศมีของวงกลม
    std::cout << ”Enter the radius (r) of the circle: “;
    std::cin >> r;

    // คำนวณพื้นที่ส่วนที่แรงเงา
    sArea = M_PI * pow(r, 2);
    CrArea = M_PI * pow(r / 2, 2);
    area = sArea - CrArea;

    // แสดงผลลัพธ์
    std::cout << ”Area of the shaded region: “ << area << std::endl;

    return 0;
}
